ARG DOCKER_USERNAME
ARG DOCKER_TAG
ARG DISTRO_VERSION
ARG DISTRO
ARG SUFFIX

ARG GCC_MAJOR_VERSION

FROM ${DOCKER_USERNAME}/gcc${GCC_MAJOR_VERSION}-${DISTRO}${SUFFIX}:${DOCKER_TAG}

ARG CROSS_ARCHITECTURE
ARG GCC_MAJOR_VERSION

USER root
RUN apt-get update && apt-get install -y gcc-${GCC_MAJOR_VERSION}-${CROSS_ARCHITECTURE}-linux-gnu g++-${GCC_MAJOR_VERSION}-${CROSS_ARCHITECTURE}-linux-gnu

ENV CONAN_ARCH=${CROSS_ARCHITECTURE}
